generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      =  env("DATABASE_URL")
}

type NombresCampo{
  CETYS String
  CACEI String
  WASC  String 
  ABET  String
}

type ContenidosCampo{
  CETYS String
  CACEI String
  WASC  String 
  ABET  String
}

model Cartas {
  id                                     String                                      @id @default(auto()) @map("_id") @db.ObjectId
  ANIO_PROGRAMA                          Int
  IDs_FILAS_CARTAS                       String[]
  MATERIA                                String
  NOMBRE_CARRERA                         String
  NOMBRE_CARTA                           String
  PROFESOR                               String
  SEMESTRE                               Int
}

model nombresCarrera{
  id                                     String                                      @id @default(auto()) @map("_id") @db.ObjectId
  NOMBRES                                String[]  
}

model camposBase{
  id                                     String                                      @id @default(auto()) @map("_id") @db.ObjectId
  NOMBRE_CAMPO                           NombresCampo
  DESCRIPCION_CAMPO                      String
  TIPO_CAMPO                             String
}

model camposCartas{
  id                                     String                                      @id @default(auto()) @map("_id") @db.ObjectId
  NOMBRE_CAMPO                           NombresCampo
  DESCRIPCION_CAMPO                      String
  TIPO_CAMPO                             String
  CONTENIDO_CAMPO                        ContenidosCampo
}

model filasCartas {
  id                                     String                                      @id @default(auto()) @map("_id") @db.ObjectId
  ACREDITADORA                           String
  HIDE_FLAG                              Boolean
  filaJSON                               String
  campoBase                              String
}